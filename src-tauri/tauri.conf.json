{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Version Manager",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true
      },
      "path": { "all": true },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "http": {
        "all": true,
        "scope": ["https://**"]
      },
      "window": { "all": true },
      "dialog": { "all": true }
    },
    "windows": [
      {
        "title": "Version Manager",
        "width": 800,
        "height": 600,
        "minWidth": 750,
        "minHeight": 450,
        "center": true,
        "resizable": true,
        "decorations": false,
        "titleBarStyle": "Visible",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "version-manager",
      "icon": ["icons/logo.png", "icons/logo.ico"]
    }
  }
}
